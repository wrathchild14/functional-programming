{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "sml-interpreter",
        "type": "shell",
        "command": "sml ${file}",
        "problemMatcher": {
          "owner": "sml",
          "fileLocation": "absolute",
          "pattern": {
            "regexp": "^(.*):(\\d+).(\\d+)(-(\\d+).(\\d+)){0,1} (Error|Warning): (.*)$",
            "line": 2,
            "column": 3,
            "endLine": 5,
            "endColumn": 6,
            "severity": 7,
            "message": 8,
            "loop": true
          }
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
            "clear": true,
            "showReuseMessage": false,
            "focus": true,
            "reveal": "always"
        }
    },
    {
        "label": "sml-run-tests",
        "type": "shell",
        "command": "sml ${file} ${fileDirname}\\${fileBasenameNoExtension}-tests.sml",
        "problemMatcher": {
          "owner": "sml",
          "fileLocation": "absolute",
          "pattern": {
            "regexp": "^(.*):(\\d+).(\\d+)(-(\\d+).(\\d+)){0,1} (Error|Warning): (.*)$",
            "line": 2,
            "column": 3,
            "endLine": 5,
            "endColumn": 6,
            "severity": 7,
            "message": 8,
            "loop": true
          }
        },
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "presentation": {
            "clear": true,
            "showReuseMessage": false,
            "focus": true,
            "reveal": "always"
        }
    }
    ]
  }